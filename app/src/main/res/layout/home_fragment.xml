<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color_gradient"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/headerTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorDarkCornFlower"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:src="@mipmap/ic_home"
                android:tint="@color/colorCyan" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/book_os"
                android:text="@string/title_home"
                android:textAlignment="center"
                android:textColor="@color/colorCyan"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                tools:ignore="spUsage" />
        </LinearLayout>

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerTitle"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_60sdp">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/headerTitle"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/profileView"
                android:layout_width="@dimen/_290sdp"
                android:layout_height="wrap_content"
                tools:ignore="NotSibling">

                <RelativeLayout
                    android:id="@+id/profileLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignStart="@+id/profileView"
                    android:layout_alignLeft="@+id/profileView"
                    android:background="@color/colorDarkCornFlower"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sub_title_Profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:fontFamily="@font/roboto_light"
                        android:text="@string/sub_title_profile"
                        android:textColor="@color/colorHotPink"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/photo_profile"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_below="@id/sub_title_Profile"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:src="@drawable/profile"
                        app:civ_border_color="@color/colorCornFlower" />


                    <TextView
                        android:id="@+id/fullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/photo_profile"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:fontFamily="@font/book_os"
                        android:gravity="fill_horizontal"
                        android:text="@string/full_name"
                        android:textAlignment="center"
                        android:textColor="@color/colorCyan"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/desc_self"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fullname"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:fontFamily="@font/roboto_light"
                        android:gravity="fill_horizontal"
                        android:text="@string/desc_profile"
                        android:textAlignment="center"
                        android:textColor="@color/colorPeriwinkle"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="italic" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/interestView"
                android:layout_width="@dimen/_290sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/profileView"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                tools:ignore="UnknownId">

                <RelativeLayout
                    android:id="@+id/interestLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorDarkCornFlower"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sub_title_Interest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:fontFamily="@font/roboto_light"
                        android:text="@string/sub_title_interest"
                        android:textColor="@color/colorHotPink"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/desc_interest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sub_title_Interest"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:fontFamily="@font/roboto_light"
                        android:gravity="fill_horizontal"
                        android:text="@string/desc_interest"
                        android:textAlignment="center"
                        android:textColor="@color/colorPeriwinkle"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="italic" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>


