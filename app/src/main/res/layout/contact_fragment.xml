<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="?attr/actionBarSize">

            <android.support.v7.widget.CardView
                android:id="@+id/notelpCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_5sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorTransparentDarkPurple"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_telp"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:tint="@color/colorWhite"/>

                    <TextView
                        android:id="@+id/no_telp_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/colorTransparentWhite"
                        android:layout_toRightOf="@+id/icon_telp"
                        android:layout_toEndOf="@+id/icon_telp"
                        android:textSize="@dimen/_14sdp"
                        tools:ignore="SpUsage"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/emailCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_2sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorTransparentDarkPurple"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_email"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:tint="@color/colorWhite"/>

                    <TextView
                        android:id="@+id/email_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/colorTransparentWhite"
                        android:layout_toRightOf="@+id/icon_email"
                        android:layout_toEndOf="@+id/icon_email"
                        android:textSize="@dimen/_14sdp"
                        tools:ignore="SpUsage"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/facebookCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_2sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorTransparentDarkPurple"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_facebook"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:tint="@color/colorWhite"/>

                    <TextView
                        android:id="@+id/facebook_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/colorTransparentWhite"
                        android:layout_toRightOf="@+id/icon_facebook"
                        android:layout_toEndOf="@+id/icon_facebook"
                        android:textSize="@dimen/_14sdp"
                        tools:ignore="SpUsage"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>