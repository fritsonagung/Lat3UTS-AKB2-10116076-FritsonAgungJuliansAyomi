<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/profileView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <LinearLayout
                    android:id="@+id/profileLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignStart="@+id/profileView"
                    android:layout_alignLeft="@+id/profileView"
                    android:background="@color/colorTransparentDarkPurple"
                    android:orientation="horizontal">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/photo_profile"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/profile"
                        app:civ_border_color="@color/colorTransparentDarkPurple"
                        tools:ignore="RtlHardcoded" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_23sdp">

                        <LinearLayout
                            android:id="@+id/full_name_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fullname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:fontFamily="@font/book_os"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold"
                                tools:ignore="RtlHardcoded,SpUsage" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/umur_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@id/full_name_layout">

                            <TextView
                                android:id="@+id/umur"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:fontFamily="@font/roboto_light"
                                android:textAlignment="center"
                                android:textColor="@color/colorTransparentWhite"
                                android:textSize="@dimen/_13sdp"
                                android:textStyle="italic"
                                tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/jenis_kelamin_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@id/umur_layout">

                            <TextView
                                android:id="@+id/jenis_kelamin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:fontFamily="@font/roboto_light"
                                android:textAlignment="center"
                                android:textColor="@color/colorTransparentWhite"
                                android:textSize="@dimen/_13sdp"
                                android:textStyle="italic"
                                tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/golongan_darah_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@id/jenis_kelamin_layout">

                            <TextView
                                android:id="@+id/gol_darah"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:fontFamily="@font/roboto_light"
                                android:textAlignment="center"
                                android:textColor="@color/colorTransparentWhite"
                                android:textSize="@dimen/_13sdp"
                                android:textStyle="italic"
                                tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/profileView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_below="@id/profileView">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignStart="@+id/profileView"
                    android:layout_alignLeft="@+id/profileView"
                    android:background="@color/colorTransparentDarkPurple"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/desc_self"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:fontFamily="@font/roboto_light"
                        android:gravity="fill_horizontal"
                        android:textAlignment="center"
                        android:textColor="@color/colorTransparentWhite"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="italic"
                        tools:ignore="SpUsage" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>