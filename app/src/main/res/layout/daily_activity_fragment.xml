<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DailyActivityFragmentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackishPurple"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLittleDarkPurple"
            app:tabSelectedTextColor="@color/colorPaletteDarkPurple"
            app:tabTextColor="@color/colorTransparentPaletteDarkPurple"
            app:tabIndicatorColor="@color/colorPurple"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/daily_view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tabs">

        </android.support.v4.view.ViewPager>
    </RelativeLayout>
</RelativeLayout>